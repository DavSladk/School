    </text>

    <audio>
        <audioClass>examle</audioClass>
        <src>snoring.mp3</src>
        <loop/>
    </audio>

    <image>
        <imageClass>imageCenter</imageClass>
        <src>bed.jpg</src>
    </image>

</slide>

